@using (Html.BeginForm("User", "ChangePassword", FormMethod.Post, new { Class = "form-horizontal" })) {
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Change profile password</h3>
		</div>
		<div class="modal-body">
			<div class="control-group">
				<label class="control-label" for="password">New password</label>
				<div class="controls">
					<input type="password" id="password" class="input-xlarge" name="password" />
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="password2">Confirm new password</label>
				<div class="controls">
					<input type="password" id="password2" class="input-xlarge" name="password2" />
					<p class="help-block">Please repeat your new password</p>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<input type="submit" class="btn btn-primary" value="Update changes" />
		</div>
}