@model SecureShare.Models.Login

@using (Html.BeginForm("Login", "User", FormMethod.Post, new { Class = "form-horizontal" })) {
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Login</h3>
		</div>
		<div class="modal-body">
			@Html.ValidationSummary(true)<br />
			
			<div class="control-group">
			<label class="control-label" for="email">Email</label>
				<div class="controls">
					@Html.TextBoxFor(model => model.Email, new { id = "email", Class = "input-xlarge" })
					<p class="help-block">@Html.ValidationMessageFor(model => model.Email)</p>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="password">Password</label>
				<div class="controls">
					@Html.TextBoxFor(model => model.Password, new { id = "password", Class = "input-xlarge" })
					<p class="help-block">@Html.ValidationMessageFor(model => model.Password)</p>
				</div>
			</div>
			<div class="control-group">
				<div class="controls">
					<label>@Html.CheckBoxFor(model => model.RememberMe, new { Class = "input-xlarge" }) Remember me next time</label>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<input type="submit" class="btn btn-primary" value="Login" />
		</div>
}
