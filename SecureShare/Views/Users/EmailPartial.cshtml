@using (Html.BeginForm("User", "ChangeEmail", FormMethod.Post, new { Class = "form-horizontal" })) {
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Change profile email</h3>
		</div>
		<div class="modal-body">
			<div class="control-group">
				<label class="control-label" for="email">Valid email</label>
				<div class="controls">
					<input type="text" id="email" class="input-xlarge" name="email" />
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="email2">Confirm email</label>
				<div class="controls">
					<input type="text" id="email2" class="input-xlarge" name="email2" />
					<p class="help-block">Please repeat the email</p>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<input type="submit" class="btn btn-primary" value="Update changes" />
		</div>
}