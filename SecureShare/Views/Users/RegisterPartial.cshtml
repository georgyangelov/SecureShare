@using (Html.BeginForm("Register", "User", FormMethod.Post, new { Class = "form-horizontal" })) {
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Register</h3>
		</div>
		<div class="modal-body">
			<div data-bind="with: error">
				<ul data-bind="foreach: parameters">
					<li><span data-bind="text: name"></span> - <span data-bind="text: message"></span></li>
				</ul>
			</div>

			<div class="control-group" data-bind="css: {error: FirstName.hasModError}">
				<label class="control-label" for="firstname">First name</label>
				<div class="controls">
					<input type="text" id="firstname" class="input-xlarge" name="firstname" data-bind="value: FirstName" />
					<p class="help-block" data-bind="visible: FirstName.hasModError, text: FirstName.errorMessage"></p>
				</div>
			</div>
			<div class="control-group" data-bind="css: {error: LastName.hasModError}">
				<label class="control-label" for="lastname">Last name</label>
				<div class="controls">
					<input type="text" id="lastname" class="input-xlarge" name="lastname" data-bind="value: LastName" />
					<p class="help-block" data-bind="visible: LastName.hasModError, text: LastName.errorMessage"></p>
				</div>
			</div>
			<div class="control-group" data-bind="css: {error: Email.hasModError}">
				<label class="control-label" for="email">Valid email</label>
				<div class="controls">
					<input type="text" id="email" class="input-xlarge" name="email" data-bind="value: Email" />
					<p class="help-block" data-bind="visible: Email.hasModError, text: Email.errorMessage"></p>
				</div>
			</div>
			<div class="control-group" data-bind="css: {error: Password.hasModError}">
				<label class="control-label" for="password">Password</label>
				<div class="controls">
					<input type="password" id="password" class="input-xlarge" name="password" data-bind="value: Password, valueUpdate: 'afterkeydown'" />
					<p class="help-block" data-bind="visible: Password.hasModError, text: Password.errorMessage"></p>
				</div>
			</div>
			<div class="control-group" data-bind="css: {error: repeatPassword.hasModError}">
				<label class="control-label" for="password2">Repeat password</label>
				<div class="controls">
					<input type="password" id="password2" class="input-xlarge" name="password2" data-bind="value: repeatPassword, valueUpdate: 'afterkeydown'" />
					<p class="help-block" data-bind="visible: repeatPassword.hasModError, text: repeatPassword.errorMessage"></p>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<input type="submit" class="btn btn-primary" value="Register" data-bind="click: register, enable: isFormValid" />
		</div>
}