@using (Html.BeginForm("Login", "User", FormMethod.Post, new { Class = "form-horizontal" })) {
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Login</h3>
		</div>
		<div class="modal-body">
						
			<div class="control-group" data-bind="css: {error: Email.hasModError}">
			<label class="control-label" for="email">Email</label>
				<div class="controls">
					<input type="text" id="email" class="input-xlarge" name="email" data-bind="value: Email" />
					<p class="help-block" data-bind="visible: Email.hasModError, text: Email.errorMessage"></p>
				</div>
			</div>
			<div class="control-group" data-bind="css: {error: Password.hasModError}">
				<label class="control-label" for="password">Password</label>
				<div class="controls">
					<input type="password" id="password" class="input-xlarge" name="password" data-bind="value: Email" />
					<p class="help-block" data-bind="visible: Email.hasModError, text: Email.errorMessage"></p>
				</div>
			</div>
			<div class="control-group">
				<div class="controls">
					<label><input type="checkbox" id="rememberme" name="rememberme" class="input-xlarge" /> Remember me next time</label>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<h4 data-bind="optionalText: error" class="error pull-left"></h4>

			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<input type="submit" class="btn btn-primary" value="Login" data-bind="click: submit, enable: isFormValid" />
		</div>
}
