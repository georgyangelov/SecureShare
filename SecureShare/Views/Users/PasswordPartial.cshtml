@using (Html.BeginForm("User", "ChangePassword", FormMethod.Post, new { Class = "form-horizontal" })) {
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Change profile password</h3>
		</div>
		<div class="modal-body">
			<div class="control-group" data-bind="css: {error: Password.hasModError}">
				<label class="control-label" for="password">New password</label>
				<div class="controls">
					<input type="password" id="password" class="input-xlarge" name="password" data-bind="value: Password" />
					<p class="help-block" data-bind="visible: Password.hasModError, text: Password.errorMessage"></p>
				</div>
			</div>
			<div class="control-group" data-bind="css: {error: PasswordRepeat.hasModError}">
				<label class="control-label" for="password2">Confirm new password</label>
				<div class="controls">
					<input type="password" id="password2" class="input-xlarge" name="password2" data-bind="value: PasswordRepeat, valueUpdate: 'afterkeydown'" />
					<p class="help-block" data-bind="visible: PasswordRepeat.hasModError, text: PasswordRepeat.errorMessage"></p>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<input type="submit" class="btn btn-primary" value="Update changes" data-bind="click: submit, enable: isFormValid" />
		</div>
}