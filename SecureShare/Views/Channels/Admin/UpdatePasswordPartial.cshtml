@using (Html.BeginForm("Update", "Channel", FormMethod.Post, new { Class = "form-horizontal" })) {
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Update channel password</h3>
		</div>
		<div class="modal-body">
			<div class="control-group" data-bind="css: {error: Password.hasModError}">
				<label class="control-label" for="password">Channel password</label>
				<div class="controls">
					<input type="password" id="password" class="input-xlarge" name="password" data-bind="value: Password" />
					<p class="help-block" data-bind="visible: Password.hasModError, text: Password.errorMessage"></p>
				</div>
			</div>
			<div class="control-group" data-bind="css: {error: PasswordRepeat.hasModError}">
				<label class="control-label" for="adminPassword2">Confirm password</label>
				<div class="controls">
					<input type="password" id="adminPassword2" class="input-xlarge" name="Password2" data-bind="value: PasswordRepeat, valueUpdate: 'afterkeydown'" />
					<p class="help-block" data-bind="visible: PasswordRepeat.hasModError, text: PasswordRepeat.errorMessage"></p>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<input type="submit" class="btn btn-primary" value="Update info" data-bind="click: submit, enable: isFormValid" />
		</div>
}