@using (Html.BeginForm("Update", "Channel", FormMethod.Post, new { Class = "form-horizontal" })) {
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Update channel</h3>
		</div>
		<div class="modal-body">
			<div class="control-group" data-bind="css: {error: Name.hasModError}">
				<label class="control-label" for="channel">Channel name</label>
				<div class="controls">
					<input type="text" id="channel" class="input-xlarge" name="channel" data-bind="value: Name" />
					<p class="help-block" data-bind="visible: Name.hasModError, text: Name.errorMessage"></p>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="description">Channel description</label>
				<div class="controls">
					<textarea id="description" class="input-xlarge" name="description" rows="3" data-bind="value: Description"></textarea>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<input type="submit" class="btn btn-primary" value="Update info" data-bind="click: submit, enable: Name.isValid" />
		</div>
}