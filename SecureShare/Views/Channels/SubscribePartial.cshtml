@using (Html.BeginForm("Subscribe", "Channel", FormMethod.Post, new { Class = "form-horizontal" })) {
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Subscribe to channel</h3>
		</div>
		<div class="modal-body">
			<div class="control-group" data-bind="css: {error: Name.hasModError}">
				<label class="control-label" for="channel">Channel name</label>
				<div class="controls">
					<input type="text" id="channel" class="input-xlarge" name="channel" data-bind="value: Name" />
					<p class="help-block" data-bind="visible: Name.hasModError, text: Name.errorMessage"></p>
				</div>
			</div>
			<div class="control-group" data-bind="css: {error: Password.hasModError}">
				<label class="control-label" for="password">Channel password</label>
				<div class="controls">
					<input type="password" id="password" class="input-xlarge" name="password" data-bind="value: Password, valueUpdate: 'afterkeydown'" />
					<p class="help-block">The regular or the admin password for the channel</p>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<h4 data-bind="optionalText: error" class="error pull-left"></h4>

			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<input type="submit" class="btn btn-primary" value="Subscribe" data-bind="click: submit, enable: isFormValid" />
		</div>
}