@using (Html.BeginForm("Register", "Channel", FormMethod.Post, new { Class = "form-horizontal" })) {
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Register new channel</h3>
		</div>
		<div class="modal-body">
			<div class="control-group">
				<label class="control-label" for="channel">Channel name</label>
				<div class="controls">
					<input type="text" id="channel" class="input-xlarge" name="channel" />
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="description">Channel description</label>
				<div class="controls">
					<textarea id="description" class="input-xlarge" name="description" rows="3"></textarea>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="password">Channel password</label>
				<div class="controls">
					<input type="password" id="password" class="input-xlarge" name="password" />
					<p class="help-block">Password for the users</p>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="adminPassword">Channel admin password</label>
				<div class="controls">
					<input type="password" id="adminPassword" class="input-xlarge" name="adminPassword" />
					<p class="help-block">Password for the channel administrators</p>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="adminPassword2">Confirm admin password</label>
				<div class="controls">
					<input type="password" id="adminPassword2" class="input-xlarge" name="adminPassword2" />
					<p class="help-block">Repeat the administrator password here</p>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<input type="submit" class="btn btn-primary" value="Register channel" />
		</div>
}